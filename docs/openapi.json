                        "fullName": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "address": {
                          "type": "string"
                        },
                        "avatarUrl": {
                          "type": "string"
                        },
                        "roles": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "reputationScore": {
                          "type": "number"
                        },
                        "isVerified": {
                          "type": "boolean"
                        },
                        "createdAt": {
                          "type": "string",
