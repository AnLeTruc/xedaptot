{
  "openapi": "3.0.0",
  "info": {
    "title": "Xedaptot API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://xedaptot.onrender.com/api",
      "description": "Production Server"
    },
    {
      "url": "http://localhost:5000/api",
      "description": "Local Server"
    }
  ],
  "tags": [
    { "name": "Auth", "description": "Authentication endpoints" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Paste Firebase ID Token here. Swagger will send: Authorization: Bearer <token>"
      }
    },
    "schemas": {
      "ApiResponseSuccessAuth": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "User registered successfully" },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "example": "64d1b5b5b5b5b5b5b5b5b5b5" },
              "email": { "type": "string", "example": "user@gmail.com" },
              "fullName": { "type": "string", "example": "Nguyen Van A" },
              "avatarUrl": { "type": "string", "example": "https://example.com/avatar.jpg" },
              "roles": {
                "type": "array",
                "items": { "type": "string" },
                "example": ["BUYER"]
              },
              "isVerified": { "type": "boolean", "example": false }
            }
          }
        }
      },
      "ApiResponseError": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "message": { "type": "string", "example": "Unauthorized" }
        }
      }
    }
  },
  "paths": {
    "/auth/firebase": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register/Sign in with Firebase ID Token",
        "description": "Send Firebase ID Token via Authorization header. Server verifies token using firebase-admin and upserts user.",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponseSuccessAuth" }
              }
            }
          },
          "401": {
            "description": "Unauthorized / token invalid",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponseError" }
              }
            }
          }
        }
      }
    }
  }
}