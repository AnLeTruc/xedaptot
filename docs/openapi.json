{
  "openapi": "3.0.0",
  "info": {
    "title": "Xedaptot API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://xedaptot.onrender.com/api",
      "description": "Production Server"
    },
    {
      "url": "http://localhost:5000/api",
      "description": "Local Server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication endpoints"
    },
    {
      "name": "Brand",
      "description": "Brand management"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Paste Firebase ID Token here. Swagger will send: Authorization: Bearer <token>"
      }
    },
    "schemas": {
      "ApiResponseSuccessAuth": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "User registered successfully"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "64d1b5b5b5b5b5b5b5b5b5b5"
              },
              "email": {
                "type": "string",
                "example": "user@gmail.com"
              },
              "fullName": {
                "type": "string",
                "example": "Nguyen Van A"
              },
              "avatarUrl": {
                "type": "string",
                "example": "https://example.com/avatar.jpg"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": [
                  "BUYER"
                ]
              },
              "isVerified": {
                "type": "boolean",
                "example": false
              }
            }
          }
        }
      },
      "ApiResponseError": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Unauthorized"
          }
        }
      },
      "Brand": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "64d1b5b5b5b5b5b5b5b5b5b5"
          },
          "name": {
            "type": "string",
            "example": "Giant"
          },
          "country": {
            "type": "string",
            "example": "Taiwan"
          },
          "isActive": {
            "type": "boolean",
            "format": "true"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "BrandListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Brand"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/firebase": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register/Sign in with Firebase ID Token",
        "description": "Send Firebase ID Token via Authorization header to register or sign in a user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseSuccessAuth"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized / token invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseError"
                }
              }
            }
          }
        }
      }
    },
    "/brand": {
      "get": {
        "tags": [
          "Brand"
        ],
        "summary": "Get all active brands",
        "description": "Returns list of all active brands",
        "response": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BrandListResponse"
                }
              }
            },
            "500": {
              "description": "Server error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ApiResponseError"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}